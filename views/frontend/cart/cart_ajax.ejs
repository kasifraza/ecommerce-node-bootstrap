<div class="container">
    <% if (productDetails.length > 0) { %>

        <div class="row">
            <div class="col-12">
                <form action="#">
                    <div class="cart-table-content">
                        <div class="table-content table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="width-thumbnail">Product</th>
                                        <th class="width-name"></th>
                                        <th class="width-price"> Price</th>
                                        <th class="width-quantity">Quantity</th>
                                        <th class="width-subtotal">Subtotal</th>
                                        <th class="width-remove"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let total = null %> 
                                    <% productDetails.forEach(product => { %>
                                    <% total += product[0].price * product[1] %> 
                                        <tr id="cart-item-<%= product[0]._id %>">
                                            <td class="product-thumbnail">
                                                <a href="/shop/product/<%= product[0].slug %>"><img src="/uploads/<%= product[0].image %>"
                                                        alt="<%= product[0].title  %> "></a>
                                            </td>
                                            <td class="product-name">
                                                <h5><a href="/shop/product/<%= product[0].slug %>"><%= product[0].title  %> </a></h5>
                                            </td>
                                            <td class="product-price"><span class="amount">$<%= parseFloat(product[0].price).toFixed(2)  %></span></td>
                                            <td class="cart-quality">
                                                <div class="product-quality">
                                                    <input class="cart-plus-minus-box input-text qty text" readonly id="<%= product[0]._id %>-qty" name="qtybutton"
                                                        value="<%= product[1] %>">
                                                        <div class="dec qtybutton" onclick="dec('<%= product[0]._id %>')">-</i></div>
                                                        <div class="inc qtybutton" onclick="inc('<%= product[0]._id %>')">+</div>
                                                </div>
                                            </td>
                                            <td class="product-total"><span id="<%= product[0]._id %>-total">$<%= parseFloat(product[0].price * product[1]).toFixed(2)  %></span></td>
                                            <td class="product-remove"><a href="javascript:void(0)" onclick="removeFromCart('<%= product[0]._id %>')">Remove</a></td>
                                        </tr>

                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <div class="cart-shiping-update-wrapper">
                            <div class="continure-clear-btn">
                                <div class="continure-btn">
                                    <a href="/shop">Continue shopping</a>
                                </div>
                                <div class="clear-btn">
                                    <a href="javascript:void(0)" onclick="emptyCart()"><i class="fal fa-times"></i> Clear shopping cart</a>
                                </div>
                            </div>
                            <div class="update-btn">
                                <a href="/cart">Update cart</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-12">
                <div class="row" style="justify-content: center;">
                    <div class="col-lg-8 col-md-12 col-12">
                        <div class="grand-total-wrap mb-40">
                            <ul>
                                <li>Subtotal <h4>$<%= parseFloat(total).toFixed(2)  %></h4>
                                </li>
                            </ul>
                            <div class="grand-total">
                                <h4>Total <span>$<%= parseFloat(total).toFixed(2)  %></span></h4>
                            </div>
                            <div class="grand-total-btn">
                                <a href="/cart/checkout">Checkout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <% }else{ %>

        <div class="row">
            <div class="col-12" style="text-align: center; justify-content: center;">
                <h1>Cart is Empty</h1>
                <a href="/shop">Continue Shopping</a>
            </div>
        </div>

        <% } %>
</div>
</div> 