<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><%= title  %> </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                    <li class="breadcrumb-item active">Blogs</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">All Blogs</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <% if (blogs && blogs != [] ) { %>
                            <table class="table table-bordered table-responsive">
                                <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Created On</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% blogs.forEach((blog,index) => { %>
                                        <tr>
                                            <td><%= index + 1 %> </td>
                                            <td><%= blog.title  %> </td>
                                            <td><textarea readonly><%= blog.description  %> </textarea></td>
                                            <td>
                                               <%= new Date(blog.created_on)  %> 
                                            </td>
                                            <td> <%- blog.status == true ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-danger">Inactive</span>'  %> </td>
                                            <td>
                                                <a href="/admin/blog/view/<%= blog._id %> "><i class="fas fa-eye"></i></a>
                                                <a href="/admin/blog/update/<%= blog._id %> "><i class="fas fa-pen"></i></a>
                                                <a href="/admin/blog/delete/<%= blog._id %> "><i class="fas fa-trash"></i></a>
                                            </td> 
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <h1>No Records Found</h1>
                        <% } %> 
                         
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0 float-right">
                            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->