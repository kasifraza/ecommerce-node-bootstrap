<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><%= title  %> </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                    <li class="breadcrumb-item active">Banners</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">All Banners</h3>
                        <a href="/admin/banner/create" class="btn btn-success btn-lg float-right rounded">Create</a>
                    </div> 
                    <!-- /.card-header -->
                    <div class="card-body">
                        <% if (banners && banners != [] ) { %>
                            <table class="table table-bordered table-responsive">
                                <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Created On</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% banners.forEach((banner,index) => { %>
                                        <tr>
                                            <td><%= index + 1 %> </td>
                                            <td><%= banner.title  %> </td>
                                            <td><textarea readonly><%= banner.description  %> </textarea></td>
                                            <td>
                                               <%= new Date(banner.createdAt)  %> 
                                            </td>
                                            <td>
                                                <a href="/admin/banner/view/<%= banner._id %> "><i class="fas fa-eye"></i></a>
                                                <a href="/admin/banner/update/<%= banner._id %> "><i class="fas fa-pen"></i></a>
                                                <a href="/admin/banner/delete/<%= banner._id %> "><i class="fas fa-trash"></i></a>
                                            </td> 
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <h1>No Records Found</h1>
                        <% } %> 
                         
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->