<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <%= title %>
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/admin">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/admin/product/index">Products</a>
                    </li>
                    <li class="breadcrumb-item active">Product Images </li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">All Product Images</h3>
                        <a href="/admin/product/upload-image/create/<%= product._id %>"
                            class="btn btn-success btn-lg float-right rounded">Upload More Images</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <% if (product && product.images && product.Images !=[] && product.images.length> 0 ) { %>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Image</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% var productImages=product.images; %>
                                        <% productImages.forEach((image,index)=> { %>
                                            <tr>
                                                <td>
                                                    <%= index + 1 %>
                                                </td>
                                                <td>
                                                    <img src="/uploads/products/<%= image %>" style="width:50px;">
                                                </td>
                                                <td>
                                                    <a
                                                        href="/admin/product/upload-image/update/<%= product._id %>/<%= index %>">
                                                        <i class="fas fa-pen ml-2"></i>
                                                    </a>
                                                    <a
                                                        href="/admin/product/upload-image/delete/<%= product._id %>/<%= index %>">
                                                        <i class="fas fa-trash ml-2"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <h1 class="text-center">No Images Found</h1>
                        <% } %>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->